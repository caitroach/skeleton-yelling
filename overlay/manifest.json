{
  "manifest_version": 3,
  "name": "Video Overlay",
  "version": "1.0.0",
  "description": "Shows a video overlay on a certain site.",
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://www.reddit.com/", "https://www.old.reddit.com/"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["skeleton.mp4"],
      "matches": ["https://x.com/*", "https://www.reddit.com/", "https://www.old.reddit.com/"]
    }
  ]
}
